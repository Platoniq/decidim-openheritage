<p class="email-greeting"><%= t("devise.mailer.invitation_instructions.hello", email: @resource.name).html_safe %></p>

<p class="email-instructions">
  <% if @resource.invited_by.present? %>
    <%= t("devise.mailer.invitation_instructions.invited_you_as_private_user", invited_by: @resource.invited_by.name, application: @resource.organization.name).html_safe %>
  <% else %>
    <%= t("devise.mailer.invitation_instructions.someone_invited_you_as_private_user", application: @resource.organization.name).html_safe %>
  <% end %>
</p>

<p class="email-button email-button__cta"><%= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, invitation_token: @token, host: @resource.organization.host).html_safe %></p>

<% if @resource.invitation_due_at %>
  <p class="email-small"><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :long)).html_safe %></p>
<% end %>

<p class="email-small email-closing"><%= t("devise.mailer.invitation_instructions.ignore").html_safe %></p>
