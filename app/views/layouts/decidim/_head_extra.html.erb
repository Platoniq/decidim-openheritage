<% if Rails.application.secrets.matomo %>
<!-- Matomo -->
<script type="text/javascript" id="matomo-script">
  var _paq = window._paq || [];
  /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
  _paq.push(['trackPageView']);
  _paq.push(['enableLinkTracking']);
  (function() {
    var u='<%= Rails.application.secrets.matomo[:url] %>';
    _paq.push(['setTrackerUrl', u+'matomo.php']);
    _paq.push(['setSiteId', '<%= matomo_id %>']);
    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
    g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
  })();
</script>
<!-- End Matomo Code -->
<% end %>

<script type="text/javascript">
  window.Decidim = window.Decidim || {};
  window.Decidim.isOpenheritage=<%= openheritage_site? %>;
  window.Decidim.useOpenStreetMaps=<%= use_openstreetmaps %>;
</script>

<% if timetracker_survey %>
  <%= javascript_include_tag "oh/survey_hacks/timetracker" %>
  <%= stylesheet_link_tag "oh/survey_hacks/timetracker" %>
<% end %>